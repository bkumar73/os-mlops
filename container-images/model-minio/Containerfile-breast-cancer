FROM quay.io/minio/minio:RELEASE.2021-07-08T01-15-01Z

EXPOSE 9000

USER root

RUN useradd -u 1000 -g 0 modelmesh && \
    microdnf install -y git git-lfs && \
    microdnf clean all && \
    mkdir /data1

WORKDIR /data1

ARG VERSION_TAG=1.4.0

RUN git clone https://github.com/mamurak/os-mlops-artefacts.git . && \
    git checkout ${VERSION_TAG} && \
    mv breast-cancer/models/1/test-model.bst breast-cancer/test-model.bst && \
    mv breast-cancer/data/* breast-cancer/ && \
    rm -r README.md .git .gitattributes claim-images object-detection fraud-detection sentence-transformer text-generation breast-cancer/models breast-cancer/data && \
    chown -R 1000:0 /data1 && \
    chgrp -R 0 /data1 && \
    chmod -R g=u /data1

USER 1000
